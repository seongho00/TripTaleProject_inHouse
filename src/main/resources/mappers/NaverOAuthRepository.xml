<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.demo.repository.NaverOAuthRepository">


	<select id="getNaverMemberById" parameterType="map"
		resultType="com.example.demo.vo.NaverMember">
		SELECT *
		FROM naverMember
		WHERE id = #{id}
	</select>
	
	<select id="doJoin" parameterType="map"
		resultType="com.example.demo.vo.NaverMember">
		INSERT INTO naverMember
		SET id = #{id},
		regDate = NOW(),
		updateDate = NOW(),
		`name` = #{name},
		email = #{email},
		profileImage = #{profileImage}
	</select>

</mapper>